{
  "name": "docker-monitor",
  "version": "2.0.0",
  "description": "Docker container status monitoring plugin with detailed information",
  "author": "Orbiton Team",
  "license": "MIT",
  "keywords": ["docker", "containers", "monitoring", "devops"],
  "category": "development",
  "size": "medium",
  "updateInterval": 5000,
  "dependencies": ["blessed", "blessed-contrib"],
  "systemRequirements": {
    "commands": ["docker"]
  },
  "optionsSchema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Widget title",
        "default": "Docker Monitor"
      },
      "updateInterval": {
        "type": "number",
        "description": "Update interval in milliseconds",
        "minimum": 1000,
        "default": 5000
      },
      "showPorts": {
        "type": "boolean",
        "description": "Whether to show container ports",
        "default": true
      },
      "showCreatedAt": {
        "type": "boolean",
        "description": "Whether to show container creation time",
        "default": true
      },
      "maxContainers": {
        "type": "number",
        "description": "Maximum number of containers to display",
        "minimum": 1,
        "maximum": 50,
        "default": 20
      }
    },
    "required": []
  },
  "examples": [
    {
      "name": "Default Docker Monitor",
      "description": "Standard Docker container monitoring",
      "config": {
        "name": "Default Docker Monitor",
        "updateInterval": 5000,
        "showPorts": true,
        "showCreatedAt": true
      }
    },
    {
      "name": "Minimal Docker Monitor",
      "description": "Simplified view without ports and timestamps",
      "config": {
        "name": "Minimal Docker Monitor",
        "showPorts": false,
        "showCreatedAt": false,
        "maxContainers": 10
      }
    }
  ]
}
