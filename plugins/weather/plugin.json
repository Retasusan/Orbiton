{
  "name": "weather",
  "version": "2.0.0",
  "description": "Comprehensive weather widget displaying current conditions and forecast",
  "author": "Orbiton Team",
  "license": "MIT",
  "keywords": ["weather", "forecast", "temperature", "climate"],
  "category": "utility",
  "size": "medium",
  "updateInterval": 600000,
  "dependencies": ["blessed", "blessed-contrib"],
  "systemRequirements": {
    "network": true
  },
  "optionsSchema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Widget title",
        "default": "Weather"
      },
      "updateInterval": {
        "type": "number",
        "description": "Update interval in milliseconds",
        "minimum": 300000,
        "default": 600000
      },
      "location": {
        "type": "string",
        "description": "Location for weather data (city,country format)",
        "default": "Tokyo,JP"
      },
      "apiKey": {
        "type": "string",
        "description": "OpenWeatherMap API key (required)"
      },
      "units": {
        "type": "string",
        "enum": ["metric", "imperial", "kelvin"],
        "description": "Temperature units",
        "default": "metric"
      },
      "language": {
        "type": "string",
        "description": "Language for weather descriptions",
        "default": "en"
      },
      "showForecast": {
        "type": "boolean",
        "description": "Whether to show forecast chart",
        "default": true
      },
      "forecastHours": {
        "type": "number",
        "description": "Number of forecast hours to display",
        "minimum": 1,
        "maximum": 24,
        "default": 8
      }
    },
    "required": ["apiKey"]
  },
  "examples": [
    {
      "name": "Basic Weather Widget",
      "description": "Simple weather display for Tokyo",
      "config": {
        "name": "Basic Weather Widget",
        "location": "Tokyo,JP",
        "apiKey": "your-openweathermap-api-key",
        "units": "metric"
      }
    },
    {
      "name": "Weather with Forecast",
      "description": "Weather display with 12-hour forecast",
      "config": {
        "name": "Weather with Forecast",
        "location": "New York,US",
        "apiKey": "your-openweathermap-api-key",
        "units": "imperial",
        "showForecast": true,
        "forecastHours": 12
      }
    },
    {
      "name": "Minimal Weather",
      "description": "Current weather only without forecast",
      "config": {
        "name": "Minimal Weather",
        "location": "London,UK",
        "apiKey": "your-openweathermap-api-key",
        "showForecast": false
      }
    }
  ]
}
